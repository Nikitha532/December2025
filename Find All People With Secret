class Solution:
    def findAllPeople(self, n: int, meetings: list[list[int]], firstPerson: int) -> list[int]:
        parent = list(range(n))

        def find(x):
            if parent[x] != x:
                parent[x] = find(parent[x])
            return parent[x]

        def union(x, y):
            px, py = find(x), find(y)
            if px != py:
                parent[py] = px

        # Person 0 shares secret with firstPerson at time 0
        union(0, firstPerson)

        # Sort meetings by time
        meetings.sort(key=lambda x: x[2])

        i = 0
        while i < len(meetings):
            time = meetings[i][2]
            temp = []

            # Process all meetings at the same time
            while i < len(meetings) and meetings[i][2] == time:
                x, y, _ = meetings[i]
                union(x, y)
                temp.append((x, y))
                i += 1

            # Roll back connections not connected to person 0
            for x, y in temp:
                if find(x) != find(0):
                    parent[x] = x
                    parent[y] = y

        # Collect all who know the secret
        return [i for i in range(n) if find(i) == find(0)]
